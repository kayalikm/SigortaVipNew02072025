<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
	</startup>

	<appSettings>
		<!-- API Settings -->
		<add key="ApiBaseUrl" value="https://api.kayaliksigorta.com" />
		<add key="ApiTimeout" value="30000" />
		<add key="TokenEndpoint" value="/auth/login" />

		<!-- Cache Settings -->
		<add key="CompanyCacheMinutes" value="1" />
		<add key="TokenCacheMinutes" value="30" />

		<!-- UI Settings -->
		<add key="DefaultTheme" value="Office2019Colorful" />
		<add key="NavPaneWidth" value="220" />
		<add key="ShowSplashScreen" value="true" />

		<!-- Default Values -->
		<add key="DefaultPhone" value="5435467543" />
		<add key="DefaultEmail" value="test@example.com" />
		<add key="MaxConcurrentRequests" value="5" />

		<!-- Error Handling -->
		<add key="LogLevel" value="All" />
		<add key="LogMaxFileSizeMB" value="10" />
		<add key="ShowDetailedErrors" value="true" />

		<!-- Browser Settings -->
		<add key="BrowserTimeout" value="30000" />
		<add key="MaxBrowserTabs" value="20" />
		<add key="EnableCaching" value="true" />
	</appSettings>
</configuration>